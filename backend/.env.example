# Bản ví dụ – Compose đã set ENV qua docker-compose.yml
# Bạn có thể copy thành backend/.env nếu muốn chạy native

# Runtime context
APP_ENV=local

# Redis / Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Piper (models mount vào ./models trên host → /app/models trong container)
PIPER_BIN=/usr/local/bin/piper
PIPER_MODEL_PATH=/app/models/en_GB-alan-medium.onnx
PIPER_CONFIG_PATH=/app/models/en_GB-alan-medium.onnx.json
PIPER_TIMEOUT_SEC=60

# Output directories
OUTPUT_DIR=/app/backend/outputs
USER_PRESETS_DIR=/app/backend/presets_user
